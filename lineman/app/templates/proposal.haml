.thread-proposal{ng_show: 'proposal'}
  %h2 {{proposal.name}}
  .thread-proposal-started-by
    %span{translate: 'proposal.started_by', translate-value-name: '{{proposal.authorName()}}'}
    %span.time-ago>
      {{discussion.createdAt | timeFromNowInWords}}

  .thread-proposal-description{btf-markdown: 'proposal.description' }

  .thread-proposal-closing-at
    %i.fa.fa-clock-o
    %span.bump Closes {{proposal.closing_at | exactDateWithTime }}
  .pie-graph-container.row
    .col-xs-6.test-me
      %canvas.pie-graph{tc-chartjs-pie:true, chart-data:'proposal.pie_chart_data', chart-options:'pie_chart_options'}
    .col-xs-5.proposal-participation
      %a{href: '#'} {{proposal.votesCount}} of X members have participated

  .card-meta-header
    %a.edit-position.pull-right{ng_show: 'currentUserVote()', href: '#'}
      %span.bump Edit
      %i.fa.fa-pencil
    %h3 Your Position
    .current-position{ng_show: 'currentUserVote()'}
      .pull-left.vote-icon{ng_class: 'currentUserVote().position'}
      %strong.author-name {{currentUserVote().authorName()}}
      %span.author-statement : {{ currentUserVote().statement }}        
    .proposal-positions{ng_hide: 'currentUserVote()'}
      .col-xs-3.agree{ng_click: 'selectPosition("yes")'}
        %img{src: '/img/yes.png'}
      .col-xs-3.abstain{ng_click: 'selectPosition("abstain")'}
        %img{src: '/img/abstain.png'}
      .col-xs-3.disagree{ng_click: 'selectPosition("no")'}
        %img{src: '/img/no.png'}
      .col-xs-3.block{ng_click: 'selectPosition("block")'}
        %img{src: '/img/block.png'}

  .card-meta-header 
    %h3 Positions
  .current-votes{ng_repeat: 'vote in proposal.votes()'}
    .vote.thread-item-minor{ng_hide: 'vote == currentUserVote()'}
      .card-left
        .thread-item-icon
          .thread-icon-img{ng_class: 'vote.position'}
      .card-right.thread-item-author
        %span.author-name {{vote.author_name()}} 
        %span.author-statement {{ vote.statement_or_position() }}

  .l-row.statement-form{ng_show: 'voteFormIsExpanded'}
    %form{ng_submit: 'submitVote()'}
      %fieldset{ng_disable: 'voteFormIsDisabled'}
        .form-group
          %textarea{ng_model: 'newVote.statement'}
          %button.btn.btn-primary{type: 'submit'}
            Vote
