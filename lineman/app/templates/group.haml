.row
  .col-xs-12
    .group-page-container
      .group-page-header
        .group-page-cover
        .group-page-logo.hidden-xs
        .group-page-buttons.pull-right
          %a.btn.btn-icon.btn-default.btn-block{href: '#'}
            %i.fa.fa-lg.fa-eye>
            %span{translate: 'group_page.notifications'}
          %a.btn.btn-icon.btn-default.btn-block{href: '#/groups/{{::group.key}}/settings', ng_click: 'goToEditForm()', translate: 'group_page.options'}
            %i.fa.fa-lg.fa-cog>
            %span{translate: 'group_page.options'}
        .group-page-name-and-privacy
          .group-page-name
            %h1 {{group.name}}
          .group-page-privacy{dropdown: '', on-toggle: 'toggled(open)'}
            %a.dropdown-toggle{href: '#'}
              %i.fa.fa-lg.fa-lock>
              %span{translate: 'common.state.private'}
            .dropdown-menu.with-labels{role: 'menu'}
              %h3.dropdown-heading{translate: 'group_page.visibility'}
              %ul.dropdown-menu-items
                %li.dropdown-menu-item
                  .dropdown-menu-item-label
                    %i.fa.fa-lg.fa-lock>
                    %span{translate: 'common.state.private'}
                    %i.fa.fa-lg.fa-check
                  .dropdown-menu-item-details
                    %span{translate: 'group_page.privacy.private'}
                %li.dropdown-menu-item.last
                  .dropdown-menu-item-label
                    %i.fa.fa-lg.fa-globe>
                    %span{translate: 'common.state.public'}
                  .dropdown-menu-item-details
                    %span{translate: 'group_page.privacy.public'}
      .group-page-description
        .context-menu.pull-right
          %i.fa.fa-lg.fa-chevron-down
        %h3.first{ translate: 'group_page.description' }
        .group-description.last{ btf-markdown: 'group.description' }
      .group-page-threads
        %h3.first{ translate: 'group_page.discussions' }
        %discussions{group: 'group'}
      .group-page-members
        .context-menu.pull-right
          %i.fa.fa-lg.fa-chevron-down
        %h3.first{ translate: 'group_page.members' }
        %members{group: 'group'}
      .group-page-subgroups
        %h3.first{ translate: 'group_page.subgroups' }
        %subgroups{group: 'group'}
