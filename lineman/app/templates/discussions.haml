.group-thread-list
  .group-thread-list-item{ng_repeat: 'discussion in group.discussions()'}
    .time-and-icon.pull-right
      %timeago.group-thread-list-time{timestamp: 'discussion.lastActivityAt' }>
      %span.group-thread-list-icon
        %i.fa.fa-lg.fa-comments

    .group-thread-list-thread-title {{ discussion.title }}
    .group-thread-list-group-name {{ discussion.groupName() }}

  .discussions-show-more.card-minor-action
    %a{ng-hide: 'lastPage', ng-click: 'getNextPage()', href: '#', translate: 'common.action.show_more'}
  .discussions-new-thread
    .row
      .col-xs-12.col-sm-6
        %a.btn.btn-success.btn-block.btn-icon{href: '#', ng_click: 'openForm()'}
          %i.fa.fa-lg.fa-plus>
          %span{translate: 'common.action.new_thread' }
