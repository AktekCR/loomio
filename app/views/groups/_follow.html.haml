- if can? :follow, @group
  - if @group.membership_for(current_user).following_by_default?
    = link_to unfollow_group_path(@group), method: :post, class: "btn" do
      %i.fa.fa-volume-up
      = t :"common.following"
    %p= t :".following_details"
  - else
    = link_to follow_group_path(@group), method: :post, class: "btn" do
      %i.fa.fa-volume-down
      = t :"common.not_following"
    %p= t :".not_following_details"


